{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "ES5", // "es5",
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "baseUrl": ".",
        "declaration": true,
        "emitDeclarationOnly": true,
        "noEmit": false,
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "src/**/*.stories.*",
        "src/**/*.test.*",
        "src/setupTests.ts",
    ]
}